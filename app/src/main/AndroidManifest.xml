<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.playaudiotest">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <service
            android:name=".service.BottomPlayService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".MainActivity"
            android:label=""
            android:theme="@style/MainActivityTheme" />
        <activity
            android:name=".LaunchActivity"
            android:label=""
            android:theme="@style/LaunchActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LocalMusicActivity"
            android:label=""
            android:theme="@style/LocalMusicTheme" />

        <service
            android:name=".service.BottomPlayService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".CloudActivity" />
        <activity
            android:name=".MusicActivity"
            android:theme="@style/MusicActivityTheme" />
        <activity android:name=".SerchActivity"
            android:theme="@style/SerchActivityTheme"/>
    </application>

</manifest>